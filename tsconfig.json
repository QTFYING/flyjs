{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@fly/antd/*": ["packages/components/src/*"],
      "@fly/hooks/*": ["packages/hooks/src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [".dumirc.ts", "packages/**/*"],
  "exclude": ["node_modules", "dist", "docs-dist"]
}
