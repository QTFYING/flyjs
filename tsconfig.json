{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@fly/antd/*": ["packages/components/src/*"],
      "@fly/hooks/*": ["packages/hooks/src/*"]
    },
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [".dumirc.ts", "global.d.ts", "packages/**/*"],
  "exclude": ["node_modules", "dist", "docs-dist"]
}
